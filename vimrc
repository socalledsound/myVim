syntax on 
filetype on
colorscheme Tomorrow-Night 
set guifont=Menlo\ Regular:h18
let mapleader=" "
map <leader>s :source ~/.vimrc<CR>
set hidden
set history=100
filetype plugin indent on
set nowrap
set tabstop=2
set shiftwidth=2
set expandtab
set smartindent
set autoindent
set hlsearch
set number
set colorcolumn=50
set lines=35 columns=60
